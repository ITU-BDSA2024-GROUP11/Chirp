<!DOCTYPE html>
<html lang="en">
@using Chirp.Core.CheepServiceInterface
@using Chirp.Infrastructure
@inject ICheepService CheepService
<head>
    <title>@ViewData["Title"]</title>
    <link href="/css/style.css" rel="stylesheet" type="text/css"/>
    <link rel="icon" type="image/png" href="/favicon/favicon.ico">

</head>
<body>
<div class="page">
    <h1><img src="/images/icon1.png" alt="Icon1"/>Chirp!</h1>

    <div class="navigation">
        @if (User.Identity?.IsAuthenticated == true) //Checks user auth and safely returns null for warning CS8602.
        {
            <div>
                <a href="/@(User.Identity?.Name)">my timeline</a> |
                <a href="/">public timeline</a> |
                <a ...>logout [@(User.Identity?.Name)]</a>
            </div>
        }
        else
        {
            <div>
                <a href="/">public timeline</a> |
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">register</a> |
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">login</a>
            </div>
        }
    </div>

    <div class="body">
        @RenderBody()
    </div>
    <div class="footer">
        Chirp &mdash; An ASP.NET Application
        @if (ViewData["Title"]?.ToString() == "Timeline")
        {
            <div class="button-group">
                <button onclick="goToFirstPage()">First</button>
                <button id="previous-button" onclick="changePage(-1)">Previous</button>
                <span id="page-number"></span>
                <button id="next-button" onclick="changePage(1)">Next</button>
                <button onclick="goToLastPage()">Last</button>
            </div>
        }
    </div>

    <script>
    let totalPages = @Math.Ceiling(@CheepService.GetCheepCount()/32.0)
    
    //This script is used to change the page number in the URL
    function getCurrentPage(){
    const urlParams = new URLSearchParams(window.location.search);
    return parseInt(urlParams.get('page')) || 1;
    }
    
    function changePage(delta) {
        const currentPage = getCurrentPage();
        let newPage = currentPage + delta;
        if (newPage <= 0) {
            newPage = 1;
        }
        if (newPage >= totalPages) {
            checkPageButtons();
        }
        window.location.href = `?page=${newPage}`;
    }
    
    function checkPageButtons() {
        const nextButton = document.getElementById("next-button");

        if (currentPage === totalPages) {
            nextButton.disabled = true;
        } else {
            nextButton.disabled = false;
        }
    }

    function displayCurrentPage() {
        const currentPage = getCurrentPage();
        document.getElementById('page-number').textContent = `Page ${currentPage}`;
    }

    displayCurrentPage();
    
    function goToFirstPage() {
        window.location.href = `?page=${1}`;
    }

    function goToLastPage() {
        window.location.href = `?page=${totalPages}`;
    }
    
    </script>
    <partial name="_LoginPartial"/>

</div>
</body>
@await RenderSectionAsync("Scripts", false)
</html>